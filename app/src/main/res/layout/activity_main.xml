<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MainActivity">

    <android.support.constraint.Guideline
            android:id="@+id/horizontalGuide1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.09"/>

    <android.support.constraint.Guideline
            android:id="@+id/horizontalGuide2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.16"/>

    <android.support.constraint.Guideline
            android:id="@+id/horizontalGuide3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.30"/>

    <android.support.constraint.Guideline
            android:id="@+id/horizontalGuide4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46"/>

    <android.support.constraint.Guideline
            android:id="@+id/horizontalGuide5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.66"/>

    <android.support.constraint.Guideline
            android:id="@+id/verticalGuideMiddle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_city"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/input"/>

    <Spinner
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:spinnerMode="dropdown"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/horizontalGuide1"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuide2"/>

    <TextView
            android:id="@+id/currentCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:text="Ahora en Buenos Aires"
            app:layout_constraintTop_toBottomOf="@id/horizontalGuide2"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuide3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/mainInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/horizontalGuide3"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuide4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/currentIcon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/mainTemperature"
                app:layout_constraintTop_toTopOf="parent"/>

        <TextView
                android:id="@+id/mainTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25°c"
                android:layout_gravity="center"
                android:textSize="60sp"
                app:layout_constraintStart_toEndOf="@id/currentIcon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/currentIcon"/>

        <TextView
                android:id="@+id/weatherState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Soleado"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/currentIcon"
                app:layout_constraintEnd_toEndOf="@id/currentIcon"
                app:layout_constraintTop_toBottomOf="@id/currentIcon" />

        <TextView
                android:id="@+id/weatherMinMax"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15°/35°"
                android:textSize="18sp"
                android:textAllCaps="true"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/mainTemperature"
                app:layout_constraintEnd_toEndOf="@id/mainTemperature"
                app:layout_constraintTop_toBottomOf="@id/currentIcon" />
    </android.support.constraint.ConstraintLayout>

    <TextView
            android:id="@+id/nextFiveDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:text="@string/next_five_days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/horizontalGuide5"/>

    <android.support.constraint.ConstraintLayout
            android:id="@+id/nextFiveDaysInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/nextFiveDays"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <TextView
                android:id="@+id/dayOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SAB"
                app:layout_constraintStart_toStartOf="@id/iconDayOne"
                app:layout_constraintEnd_toEndOf="@id/iconDayOne"
        />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDayOne"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dayOne"
                app:layout_constraintStart_toStartOf="parent"
        />

        <TextView
                android:id="@+id/temperatureDayOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iconDayOne"
                app:layout_constraintStart_toStartOf="@id/iconDayOne"
                app:layout_constraintEnd_toEndOf="@id/iconDayOne"/>

        <TextView
                android:id="@+id/dayTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SAB"
                app:layout_constraintStart_toStartOf="@id/iconDayTwo"
                app:layout_constraintEnd_toEndOf="@id/iconDayTwo"
        />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDayTwo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dayOne"
                app:layout_constraintStart_toEndOf="@id/iconDayOne"
        />

        <TextView
                android:id="@+id/temperatureDayTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iconDayTwo"
                app:layout_constraintStart_toStartOf="@id/iconDayTwo"
                app:layout_constraintEnd_toEndOf="@id/iconDayTwo"/>

        <TextView
                android:id="@+id/dayThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SAB"
                app:layout_constraintStart_toStartOf="@id/iconDayThree"
                app:layout_constraintEnd_toEndOf="@id/iconDayThree"
        />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDayThree"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dayThree"
                app:layout_constraintStart_toEndOf="@id/iconDayTwo"
        />

        <TextView
                android:id="@+id/temperatureDayThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iconDayThree"
                app:layout_constraintStart_toStartOf="@id/iconDayThree"
                app:layout_constraintEnd_toEndOf="@id/iconDayThree"/>

        <TextView
                android:id="@+id/dayFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SAB"
                app:layout_constraintStart_toStartOf="@id/iconDayFour"
                app:layout_constraintEnd_toEndOf="@id/iconDayFour"
        />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDayFour"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dayFour"
                app:layout_constraintStart_toEndOf="@id/iconDayThree"
        />

        <TextView
                android:id="@+id/temperatureDayFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iconDayFour"
                app:layout_constraintStart_toStartOf="@id/iconDayFour"
                app:layout_constraintEnd_toEndOf="@id/iconDayFour"/>

        <TextView
                android:id="@+id/dayFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:text="SAB"
                app:layout_constraintStart_toStartOf="@id/iconDayFive"
                app:layout_constraintEnd_toEndOf="@id/iconDayFive"
        />

        <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iconDayFive"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="7dp"
                app:srcCompat="@drawable/ic_wb_sunny_black_24dp"
                app:layout_constraintTop_toBottomOf="@id/dayFive"
                app:layout_constraintStart_toEndOf="@id/iconDayFour"
        />

        <TextView
                android:id="@+id/temperatureDayFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/23"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/iconDayFive"
                app:layout_constraintStart_toStartOf="@id/iconDayFive"
                app:layout_constraintEnd_toEndOf="@id/iconDayFive"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>